---
interface Props {
iconLink?: string,
name: string
}
const { iconLink, name } = Astro.props
---
<span class="tech-badge rounded-full px-2.5 py-0.5 text-default text-sm font-semibold bg-muted border border-muted items-center gap-1 flex justify-between" data-animate="true">
    {iconLink && (
      <img src={iconLink} title={name} alt={name} width="20" height="20" />
    )}
    <span>{name}</span>
</span>

<style>
  .tech-badge {
    opacity: 0;
    transform: translateY(8px) scale(0.98);
    filter: blur(4px);
    transition:
      opacity 500ms ease,
      transform 500ms ease,
      filter 600ms ease;
    transition-delay: var(--reveal-delay, 0ms);
    will-change: opacity, transform, filter;
  }
  .tech-badge.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }
  @media (prefers-reduced-motion: reduce) {
    .tech-badge { transition: none; transform: none; filter: none; }
  }
</style>


